<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.oxapps.tradenotifications.MainActivity"
    android:orientation="vertical">


    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Steam Web API Key"
        android:textColor="@color/colorAccent"
        android:layout_marginTop="8dp"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_marginTop="16dp"
        android:layout_height="wrap_content"
        android:text="The API Key is used to fetch your trade offers. Click the Get API Key button to find it. You can use any URL for the domain field.\nAfter receiving an API Key, copy it and enter it in the text field below."/>

    <EditText
        android:id="@+id/et_api_key"
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="API Key (required)"/>

    <Button
        android:id="@+id/button_get_api_key"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="getApiKey"
        android:hint="Get API Key"/>

    <TextView
        android:id="@+id/tv_polling_interval"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Checking interval"
        android:textColor="@color/colorAccent"
        android:textStyle="bold"/>

    <RelativeLayout
        android:onClick="showIntervalDialog"
        android:layout_width="match_parent"
        android:paddingTop="12dp"
        android:paddingBottom="16dp"
        android:layout_height="72dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:text="Checking interval"/>

        <TextView
            android:id="@+id/tv_delay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="10 minutes"/>
    </RelativeLayout>



</LinearLayout>
